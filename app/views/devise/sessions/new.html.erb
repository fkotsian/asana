<h2 class='cursive'>Please sign in</h2><br>

<%= form_for(resource, as: resource_name, url: session_path(resource_name), class: 'form-horizontal') do |f| %>

<div class='form-group'>
  <%= f.email_field :email, autofocus: true, class: 'form-control', placeholder: 'Email address' %>
</div>

<div class='form-group'>
  <%= f.password_field :password, autocomplete: "off", class: 'form-control', placeholder: 'Password' %>
</div>

<% if devise_mapping.rememberable? -%>
  <div class='form-group'>
    <%= f.check_box :remember_me, class:'' %> <%= f.label :remember_me, class: 'cursive' %>
  </div>
<% end %>

<div class='form-group'>
  <%= f.submit "Sign in", class: 'btn btn-primary form-control' %>
</div>
<% end %>

<%= render "devise/shared/links" %>

